<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/ScrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            tools:context=".FragmentReadCard">

            <LinearLayout
                android:id="@+id/layout_tag_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_view_tag_id"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_view_tag_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_view_info"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:fontFamily="monospace"/>

            <TextView
                android:id="@+id/text_view_card_web_service_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
            />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/ProgressBar"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_view_nfc_info"
        style="@style/TextViewNfcInfo"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_view_nfc"
        style="@style/TextViewNfcInfo"
        android:text="@string/turn_nfc_on"
        android:visibility="gone" />
</RelativeLayout>